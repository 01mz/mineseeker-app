<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.as3">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_bomb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_bomb"
        android:supportsRtl="true"
        android:theme="@style/Theme.MineSeeker">
        <activity
            android:name=".ui.WelcomeActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.HelpActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.OptionsActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_options"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.GameActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.MainMenuActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape">

        </activity>
    </application>

</manifest>